<?xml version="1.0" encoding="UTF-8"?>
<frame
	id="MAIN_FRAME"
	size="800,600"
	preferredsize="800,600"
	title="Euclidean Pattern Generator" 
	defaultCloseOperation="JFrame.EXIT_ON_CLOSE"
	background="DDDDDD"
	layout="BorderLayout" >
	
	<panel
		name="main_panel"
		constraints="BorderLayout.CENTER"
		layout="GridBagLayout"
		background="776666">
		
		<panel
			name="controls_panel"
			PreferredSize="800,80"
			MinimumSize="400,80"
			MaximumSize="800,80"
			background="C7E1EA"
			layout="GridBagLayout"
			include="res/layout/controls.xml#panel">
			<gridbagconstraints
				gridx="0"
				gridy="0"
				weightx="1"
				weighty="0"
				gridwidth="2"
				insets="4,4,2,4"
				fill="GridBagConstraints.HORIZONTAL"
				anchor="GridBagConstraints.FIRST_LINE_START"
				/>
		</panel>
		
		<panel
			id="CANVAS_PANEL"
			background="F0F8FF">
			<gridbagconstraints
				gridx="0"
				gridy="1"
				weightx="1"
				weighty="1"
				insets="2,4,4,2"
				fill="GridBagConstraints.BOTH"
				/>
		</panel>
	
		<scrollpane
			name="settings_panel"
			id="SETTINGS_SCROLLPANE"
			preferredSize="300,520"
			minimumSize="300,100"
			maximumSize="300,520"
			background="F0F8FF"
			border="0"
			include="res/layout/settings.xml#panel">
			<gridbagconstraints
				weightx="0"
				weighty="1"
				gridx="1"
				gridy="1"
				insets="2,2,4,4"
				fill="GridBagConstraints.BOTH"
				/>
		</scrollpane>
	</panel>
</frame>